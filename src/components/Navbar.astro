---
import {
  PiBracketsCurlyDuotone,
  PiBrainDuotone,
  PiSunDuotone,
  PiMoonDuotone,
} from 'react-icons/pi';
---

<nav
  class='h-12 w-full px-4 fixed top-0 left-0 grid-cols-[10%_80%] backdrop-blur-3xl border-b-[1px] border-transparent border-solid border-b-gray-300 dark:border-b-[#212121] md:!grid hidden z-50'
>
  <img
    src='./favicon.webp'
    class='self-center justify-self-center h-7'
    alt='Navigation bar my logo'
  />

  <section class='flex justify-self-end items-center' style='gap: 32px;'>
    <div class='flex items-center justify-items-center gap-x-2'>
      <PiBracketsCurlyDuotone
        className='text-blue-500 dark:text-blue-500 text-xl m-0'
      />
      <a
        href='#projects'
        class='block no-underline hover:underline text-base text-black dark:text-white'
      >
        Projects
      </a>
    </div>

    <div class='flex items-center justify-items-center gap-x-2'>
      <PiBrainDuotone
        className='text-blue-500 dark:text-blue-500 text-xl m-0'
      />
      <a
        class='block no-underline hover:underline text-base text-black dark:text-white'
        href='#experience'
      >
        Experience
      </a>
    </div>

    <button
      id='btnLightDesktop'
      type='button'
      title='Button turn the dark mode'
      class='border-none bg-transparent'
    >
      <PiMoonDuotone className='text-p500 text-2xl' />
    </button>

    <button
      id='btnDarkDesktop'
      type='button'
      title='Button turn the light mode'
      class='border-none bg-transparent hidden'
    >
      <PiSunDuotone className='text-yellow-200 text-2xl' />
    </button>
  </section>
</nav>
