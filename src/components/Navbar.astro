---
import "../css/Navbar.css";
import FlagMX from "./icons/FlagMX.astro";
import FlagUS from "./icons/FlagUS.astro";
---

<nav class="navBar-desktop">
  <img src="./favicon.webp" alt="navigation bar icon" />

  <section class="navBar-desktop-options">
    <input type="checkbox" id="toggleBannerCV" title="hey" />
    <label for="toggleBannerCV" class="btnDownloadCV">Download CV</label>

    <article class="wrapperModalCV">
      <a
        class="btnCV"
        href="/assets/valenciaarcega-cv-es.pdf"
        download="valenciaarcega-cv-es.pdf"
      >
        <FlagMX />
        Versión en Español
      </a>
      <a
        class="btnCV"
        href="/assets/valenciaarcega-cv-en.pdf"
        download="valenciaarcega-cv-en.pdf"
      >
        <FlagUS />
        English version
      </a>
    </article>
    <a class="topBar-anker" href="#sp">Projects</a>

    <a class="topBar-anker" href="#ss">Experience</a>

    <button
      type="button"
      title="Button turn the dark mode"
      class="navBarBtnDark"
    >
      <ion-icon class="navbar-desktop-ion" name="moon-outline"></ion-icon>
    </button>

    <button
      type="button"
      title="Button turn the light mode"
      class="navBarBtnSun hidden"
    >
      <ion-icon class="navbar-desktop-ion" name="sunny-outline"></ion-icon>
    </button>
  </section>
</nav>

<style>
  .btnDownloadCV {
    border: none;
    outline: none;
    background: none;
    color: var(--frText);
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-touch-callout: none;
    -webkit-tap-highlight-color: transparent;
    -webkit-user-drag: none;
    -khtml-user-drag: none;
    -moz-user-drag: none;
    -o-user-drag: none;
  }
  .wrapperModalCV {
    height: fit-content;
    width: fit-content;
    padding: 1rem;
    border-radius: 0.5rem;
    background-color: var(--bgWhite);
    position: absolute;
    top: 3.3rem;
    right: 20%;
    z-index: 5;
    display: flex;
    gap: 1rem;
    flex-direction: column;
  }

  .wrapperModalCV a {
    display: flex;
    align-items: center;
    gap: 0.7rem;
  }
  #toggleBannerCV {
    display: none;
  }
  #toggleBannerCV:checked ~ .wrapperModalCV {
    display: none;
  }
</style>
